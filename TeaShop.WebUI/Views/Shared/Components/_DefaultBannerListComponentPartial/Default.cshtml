@model List<TeaShop.WebUI.DTOs.BannerDTOs.ResultBannerDTO>

@{
    var active = "";
    int count = 1;
}

<div class="banner_section layout_padding">
    <div id="main_slider" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                if (count == 1)
                {
                    active = "active";
                    count++;
                }
                else
                {
                    active = "";
                }

                <div class="carousel-item @active">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <h1 class="banner_taital">@item.BannerTitle <span style="color: #f3801f;">@item.BannerSubTitle</span></h1>
                            </div>
                            <div class="col-md-6">
                                <div><img src="~/images/@item.BannerImageURL" class="image_1"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="next">
            <i class="fa fa-angle-left"></i>
        </a>
        <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
            <i class="fa fa-angle-right"></i>
        </a>
    </div>
</div>
<div class="container">
    <div class="play_icon"><a href="#"><img src="~/teab-1.0.0/images/play-icon.png"></a></div>
</div>