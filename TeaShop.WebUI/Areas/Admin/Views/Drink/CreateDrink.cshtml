@model CreateDrinkDTO

@{
    ViewData["Title"] = "CreateDrink";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni İçecek Girişi</h1>
<br />
<form method="post" enctype="multipart/form-data">
    <label>İçecek Adı</label>
    <input type="text" asp-for="DrinkName" class="form-control" id="floatingInput" placeholder="İçecek Adı" required />
    <br />
    <label>İçecek Fiyatı</label>
    <input type="text" asp-for="DrinkPrice" class="form-control" id="floatingInput" placeholder="İçecek Fiyatı" required />
    <br />
    <label>İçecek Görseli</label>
    @* <input type="text" asp-for="DrinkImageURL" class="form-control" /> *@
    <br />
    <input type="file" name="image" />
    <br />
    <br />
    <input id="IsHome" asp-for="IsHome" type="checkbox" />
    <label for="IsHome">Ana Sayfa</label>
    <br />
    <br />
    <input id="Status" asp-for="DrinkStatus" type="checkbox" />
    <label for="Status">Durum</label>
    <br />
    </br>
    <button class="btn btn-primary"><i class="fas fa-save"></i> İçeceği Ekle</button>
</form>