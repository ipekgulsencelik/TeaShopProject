@model UpdateSocialMediaDTO

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Hesap Güncelleme</h1>
<br />
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="SocialMediaID" />
    <label>Hesap URL</label>
    <input type="text" asp-for="URL" class="form-control" id="floatingInput" placeholder="URL..." required />
    <br />
    <label>Hesap Görseli</label>
    <br />
    <img src="~/images/@Model.ImageURL" width="90" />
    <br />
    <br />
    <input type="file" name="image" />
    <br />
    <br />
    <input id="IsHome" asp-for="IsHome" type="checkbox" />
    <label for="IsHome">Ana Sayfa</label>
    <br />
    <br />
    <input id="SocialMediaStatus" asp-for="SocialMediaStatus" type="checkbox" />
    <label for="SocialMediaStatus">Durum</label>
    <br />
    <br />
    <button class="btn btn-success"><i class="fas fa-save"></i> Hesap Güncelle</button>
</form>