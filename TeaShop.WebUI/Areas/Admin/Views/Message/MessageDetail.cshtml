@model ResultMessageDTO

@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3>Gelen Mesaj Detayı</h3>
<br />
<table class="table table-striped">
    <tr>
        <th>Ad Soyad :</th>
        <td>@Model.MessageSenderName</td>
    </tr>
    <tr>
        <th>Email :</th>
        <td>@Model.MessageEmail</td>
    </tr>
    <tr>
        <th>Konu :</th>
        <td>@Model.MessageSubject</td>
    </tr>
    <tr>
        <th>Tarih :</th>
        <td>@Model.MessageSendDate.ToString("g")</td>
    </tr>
    <tr>
        <th>Mesaj :</th>
        <td>@Model.MessageDetail</td>
    </tr>
</table>