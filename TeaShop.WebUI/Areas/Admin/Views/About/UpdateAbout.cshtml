@model UpdateAboutDTO

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Referans Girişi</h1>
<br />
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="AboutID" />
    <label>Referans Adı</label>
    <input type="text" asp-for="AboutTitle" class="form-control" id="floatingInput" placeholder="Referans Adı" required />
    <br />
    <label>Referans Ünvanı</label>
    <input type="text" asp-for="AboutDescription" class="form-control" id="floatingInput" placeholder="Açıklama..." required />
    <br />
    <label>Referans Görseli</label>
    <br />
    <img src="~/images/@Model.AboutImageURL" width="90" />
    <br />
    <br />
    <input type="file" name="image" />
    <br />
    <br />
    <input id="IsHome" asp-for="IsHome" type="checkbox" />
    <label for="IsHome">Ana Sayfa</label>
    <br />
    <br />
    <input id="IsFooter" asp-for="IsFooter" type="checkbox" />
    <label for="IsFooter">Alt-Bilgi</label>
    <br />
    <br />
    <input id="AboutStatus" asp-for="AboutStatus" type="checkbox" />
    <label for="AboutStatus">Durum</label>
    <br />
    <br />
    <button class="btn btn-success"><i class="fas fa-pen"></i> Hakkımızda Güncelle</button>
</form>