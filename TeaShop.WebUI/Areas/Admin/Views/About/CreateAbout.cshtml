@model CreateAboutDTO

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Referans Girişi</h1>
<br />
<form method="post" enctype="multipart/form-data">
    <label>Referans Adı</label>
    <input type="text" asp-for="AboutTitle" class="form-control" id="floatingInput" placeholder="Başlık" required />
    <br />
    <label>Referans Ünvanı</label>
    <input type="text" asp-for="AboutDescription" class="form-control" id="floatingInput" placeholder="Açıklama..." required />
    <br />
    <label>Hakkımızda Görseli</label>
    <br />
    <input type="file" name="image" />
    <br />
    <br />
    <input id="IsHome" asp-for="IsHome" type="checkbox" />
    <label for="IsHome">Ana Sayfa</label>
    <br />
    <br />
    <input id="IsFooter" asp-for="IsFooter" type="checkbox" />
    <label for="IsFooter">Alt-Bilgi</label>
    <br />
    <br />
    <input id="AboutStatus" asp-for="AboutStatus" type="checkbox" />
    <label for="AboutStatus">Durum</label>
    <br />
    <br />
    <button class="btn btn-primary"><i class="fas fa-save"></i> Referans Ekle</button>
</form>